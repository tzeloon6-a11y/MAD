<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row with Name and Unread Indicator -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <!-- Other User's Name -->
            <TextView
                android:id="@+id/tv_other_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="User Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/classic_text_primary" />

            <!-- Red Dot Indicator for Unread -->
            <View
                android:id="@+id/view_unread_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="@drawable/red_dot"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- Other User's Bio (for recruiters viewing students) -->
        <TextView
            android:id="@+id/tv_other_user_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User bio..."
            android:textSize="12sp"
            android:textColor="@color/classic_text_secondary"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone" />

        <!-- Job Title -->
        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="14sp"
            android:textColor="@color/app_blue"
            android:layout_marginTop="4dp" />

        <!-- Last Message Snippet -->
        <TextView
            android:id="@+id/tv_last_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last message preview..."
            android:textSize="12sp"
            android:textColor="@color/classic_text_secondary"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 PM"
            android:textSize="11sp"
            android:textColor="@color/classic_text_secondary"
            android:layout_marginTop="4dp"
            android:layout_gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

