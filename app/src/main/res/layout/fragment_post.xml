<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/classic_background">

    <LinearLayout
        android:id="@+id/ll_post_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_post_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Post"
            android:textColor="@color/app_blue"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="24dp"/>

        <!-- Recruiter Option: Post Type -->
        <RadioGroup
            android:id="@+id/rg_post_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rb_job_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Post"
                android:textColor="@color/classic_text_primary"
                android:buttonTint="@color/app_blue"
                android:checked="true"
                android:layout_marginEnd="24dp"/>

            <RadioButton
                android:id="@+id/rb_profile_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Post"
                android:textColor="@color/classic_text_primary"
                android:buttonTint="@color/app_blue"/>
        </RadioGroup>

        <EditText
            android:id="@+id/et_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:background="@android:drawable/edit_text"
            android:textColor="@color/classic_text_primary"
            android:textColorHint="@color/classic_text_secondary"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_post_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Describe here..."
            android:background="@android:drawable/edit_text"
            android:textColor="@color/classic_text_primary"
            android:textColorHint="@color/classic_text_secondary"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="24dp"/>

        <!-- Media Picker -->
        <Button
            android:id="@+id/btn_pick_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image/Video"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/app_blue"
            app:strokeColor="@color/app_blue"
            android:layout_marginBottom="16dp"/>

        <!-- Media Previews -->
        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <VideoView
            android:id="@+id/vv_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_submit_post"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Submit Post"
            android:backgroundTint="@color/app_blue"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>
